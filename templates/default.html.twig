{% extends 'partials/base.html.twig' %}

{% block content %}
    <div class="page-content">
        <div class="wrapper">
            <div class="teaserimage">
                <div class="teaserimage-image" {% if page.header.cover %}style="background-image: url({{ page.media[page.header.cover].url }})"{% endif %}>
                    Teaser Image
                </div>
            </div>
        </div>
    </div>

    <header class="blog-header">
        {% include 'partials/emblem.html.twig' %}
        {% if (page.title|underscorize) == 'home' %}
            {% if site.title %}
                <h1 class="blog-title">{{ site.title }}</h1>
            {% endif %}
            {% if site.description %}
                <h2 class="blog-description">{{ site.description }}</h2>
            {% endif %}
        {% else %}
            {% if page.title %}
                <h1 class="blog-title">{{ page.title }}</h1>
            {% endif %}
            {% if page.header.description %}
                <h2 class="blog-description">{{ page.header.description }}</h2>
            {% endif %}
        {% endif %}
        <div class="custom-links">
            {% for social in site.social %}
                {% if social.url %}
                    <a class="icon-{{ social.icon }}" href="{{ social.url }}"> <i class="fa fa-{{ social.icon }}"></i> </a>
                    &nbsp;&nbsp;Â·&nbsp;&nbsp;
                {% endif %}
            {% endfor %}
            <a href="{{ base_url_relative }}/about">About</a>
        </div>
    </header>

    <main class="content volume" role="main">

        {% set featured = taxonomy.findTaxonomy({'tag':'featured'}) %}

        <div class="page-content">
            <div class="wrapper">
                {{ content|raw }}
            </div>
        </div>

        {% if config.plugins.pagination.enabled and collection.params.pagination %}
            {% include 'partials/pagination.html.twig' with {'base_url': page.url, 'pagination':collection.params.pagination} %}
        {% endif %}

    </main>
{% endblock %}
