<div class="post-meta text-center">
    {% if page.header.link %}
        <h1 class="post-title text-center">
            <i class="fa fa-angle-double-right"></i> <a href="{{ page.header.link }}">{{ page.title }}</a>
        </h1>
    {% else %}
        <h1 class="post-title text-center">
            {{ page.title }}
        </h1>
    {% endif %}
    {% if page.template == 'post' %}
        <div class="cf post-meta-text">
            {% set author = ( page.header.author ? page.header.author : site.author ) %}
            <div class="author-image" style="background-image: url({{ uri.rootUrl() }}{{ author.image }})">Blog Logo</div>
            <h4 class="author-name" itemprop="author" itemscope itemtype="http://schema.org/Person">{{ author.name }}</h4>
            on
            <time datetime="{{ page.date | date(site.date_short) }}">{{ page.date | date(site.date_short) }}</time>
            {% if page.taxonomy.tag|length > 0 %}
                <span class="post-tags-set">in {% for tag in page.taxonomy.tag %}<span class="post-tag-{{ tag }}"><a href="{{ base_url }}/tag{{ config.system.param_sep }}{{ tag }}">{{ tag }}</a></span>{% if not loop.last %} + {% endif %}{% endfor %}</span>
            {% endif %}
        </div>
    {% endif %}
    <div style="text-align:center">
        <a href="#topofpage" class="topofpage"><i class="fa fa-angle-down"></i></a>
    </div>
</div>
