{% block emblem_color %}
    {% if page.header.emblem.color %}
        {% if page.header.emblem.color.rotate %}
            {% set rotate = page.header.emblem.color.rotate %}
            <style>
                header a.blog-logo, header img.blog-emblem {
                    filter: hue-rotate({{ rotate }}deg) !important;
                }
            </style>
        {% elseif page.header.emblem.color.set %}
            {% set color = page.header.emblem.color.set %}
            <style>
                header a.blog-logo, header img.blog-emblem {
                    color: {{ color }} !important;
                }
            </style>
        {% endif %}
    {% endif %}
{% endblock %}
